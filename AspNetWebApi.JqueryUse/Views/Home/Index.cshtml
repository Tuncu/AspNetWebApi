
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h4 class="panel-title">Create New Employee</h4>
            </div>
            <div class="panel-body">
                <div class="col-md-12">
                    <div class="form-horizontal">

                        <div class="form-group">
                            <label for="name" class="control-label col-md-2">Name</label>
                            <div class="col-md-10">
                                @Html.TextBox("name","",new { @class = "form-control", placeholder = "Name" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="surname" class="control-label col-md-2">Name</label>
                            <div class="col-md-10">
                                @Html.TextBox("surname", "", new { @class = "form-control", placeholder = "Surname" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="gender" class="control-label col-md-2">Name</label>
                            <div class="col-md-10">
                                @Html.DropDownList("gender",
                               new SelectListItem[]
                               {
                                   new SelectListItem {Text="Erkek",Value="erkek" },
                                   new SelectListItem {Text="Kadın",Value="kadın" },
                               }
                               ,"Gender", new { @class = "form-control"})
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="salary" class="control-label col-md-2">Name</label>
                            <div class="col-md-10">
                                @Html.TextBox("salary", "", new { @class = "form-control", placeholder = "Salary",type="number" })
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <button type="button" id="btnCreate" class="btn btn-success">Create</button>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <ul id="employees" class="list-group">

        </ul>
    </div>
</div>
